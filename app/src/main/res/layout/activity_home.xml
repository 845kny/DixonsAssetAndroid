<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/home"
    tools:context=".Kru.Home">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp">

        <ImageView
            android:id="@+id/logout_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="30dp"
            android:src="@drawable/logout_icon" />

        <TextView
            android:id="@+id/welcome_msg"
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingStart="30dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/logout_button"
            android:textSize="24sp"
            android:textFontWeight="800"
            android:textColor="@color/primary"
            android:fontFamily="@font/montserrat"
            android:text="Hai, Kenny" />

        <TextView
            android:id="@+id/textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Berikut hal yang dapat kamu lakukan"
            android:layout_marginTop="40dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/welcome_msg"
            android:fontFamily="@font/montserrat"
            android:textFontWeight="400"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:paddingStart="30dp"/>
        <Button
            android:id="@+id/pinjam_barang_button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/montserrat"
            android:textSize="14sp"
            android:textFontWeight="600"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/textview"
            android:layout_marginTop="30dp"
            android:text="Pinjam Barang"
            android:textColor="@color/white"
            android:textAlignment="textStart"
            android:paddingStart="40dp"
            android:paddingVertical="10dp"
            android:hapticFeedbackEnabled="true"
            android:drawableEnd="@drawable/pinjam_barang_icon"
            android:layout_marginHorizontal="30dp"
            android:background="@drawable/rounded_45px"/>

        <GridLayout
            android:id="@+id/grid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/pinjam_barang_button"
            android:padding="30dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/status_peminjaman_button"
                android:layout_width="100dp"
                android:layout_height="160dp"
                android:layout_columnWeight="1"
                android:layout_marginEnd="10dp"
                android:layout_gravity="fill"
                android:background="@drawable/rounded_45px"
                android:drawableTop="@drawable/status_peminjaman_icon"
                android:fontFamily="@font/montserrat"
                android:hapticFeedbackEnabled="true"
                android:text="Status Peminjaman"
                android:textColor="@color/white"
                android:textFontWeight="600"
                android:textSize="10sp" />

            <Button
                android:id="@+id/cek_gudang_button"
                android:layout_width="100dp"
                android:layout_height="150dp"
                android:layout_gravity="fill"
                android:layout_columnWeight="1"
                android:layout_marginStart="10dp"
                android:background="@drawable/rounded_45px"
                android:drawableTop="@drawable/cek_gudang_icon"
                android:fontFamily="@font/montserrat"
                android:hapticFeedbackEnabled="true"
                android:text="Cek Gudang"
                android:textColor="@color/white"
                android:textFontWeight="600"
                android:textSize="10sp" />

        </GridLayout>

        <Button
            android:id="@+id/kembalikan_barang_button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/montserrat"
            android:textSize="14sp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/grid"
            android:textFontWeight="600"
            android:text="Kembalikan Barang"
            android:textColor="@color/white"
            android:textAlignment="textStart"
            android:paddingStart="40dp"
            android:paddingVertical="10dp"
            android:layout_marginBottom="150dp"
            android:hapticFeedbackEnabled="true"
            android:drawableEnd="@drawable/pinjam_barang_icon"
            android:layout_marginHorizontal="30dp"
            android:background="@drawable/rounded_45px"/>

    </RelativeLayout>
</ScrollView>